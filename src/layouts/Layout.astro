---
import { SEO } from "astro-seo";
import Header from "../components/Header.astro";
const { title } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, import.meta.env.PUBLIC_DOMAIN);
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8" />

    <SEO
      title={title}
      description="Tier- und Pferdefotografie aus Leidenschaft. Ich liebe Tiere, meine Kamera und die Natur. Ihre Momente fÃ¼r die Ewigkeit."
      canonical={canonicalURL.href}
      extend={{
        link: [{ rel: "icon", href: "/favicon.svg" }],
        meta: [{ name: "viewport", content: "width=device-width, initial-scale=1" }],
      }}
    />
  </head>
  <body class="mt-12 px-4">
    <Header />
    <slot />
  </body>
</html>
