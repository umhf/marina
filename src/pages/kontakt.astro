---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon";
import instagram from "../images/icons/instagram.svg";
import ButtonPrimary from "../components/ButtonPrimary.astro";
---

<!-- TODO: ajax request -->
<Layout>
  <section class="mt-24 container mx-auto max-w-3xl">
    <h1 class="text-center">Kontakt</h1>
    <p>
      Du hast Interesse an eine meiner Leistungen oder m√∂chtest mehr Erfahren? Schreibe mir einfach per Whatsapp,
      Instagram, Email oder Kontaktformular.
    </p>
    <div class="flex flex-col mt-8 md:flex-row">
      <div
        class="flex justify-center space-x-8 md:space-x-0 md:flex-col md:space-y-8 md:w-1/3 p-8 md:ml-8 items-center md:order-last bg-colored-100"
      >
        <a href="https://wa.me/+491627572752?text=Hallo" target="_BLANK">
          <Icon class="w-12" name="logos:whatsapp" />
        </a>
        <a href="https://www.instagram.com/marinullu/" target="_BLANK">
          <img src={instagram} alt="Instagram Logo" class="w-12" />
        </a>
        <a href="mailto:hallo@marina-schmid.com" target="_BLANK">
          <Icon class="w-12" name="dashicons:email" />
        </a>
      </div>
      <div class="text-center mt-8 text-xs md:hidden">oder</div>

      <form class="w-full" method="POST" data-netlify="true" name="Contact">
        <div class="flex flex-wrap">
          <div class="w-full">
            <label class="block uppercase tracking-wide text-white-900 text-xs mb-2" for="name"> Name</label>
            <input
              required
              class="block w-full bg-white-50 text-white-900 border border-colored-700 rounded py-3 px-4 mb-3 leading-tight focus:bg-colored-100 focus:border-colored-500"
              id="name"
              type="text"
              name="name"
            />
          </div>
        </div>
        <div class="flex flex-wrap">
          <div class="w-full">
            <label class="block uppercase tracking-wide text-white-900 text-xs mb-2" for="email"> Email</label>
            <input
              required
              class="block w-full bg-white-50 text-white-900 border border-colored-700 rounded py-3 px-4 mb-3 leading-tight focus:bg-colored-100 focus:border-colored-500"
              id="email"
              type="email"
              name="email"
            />
          </div>
        </div>
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full px-3">
            <label class="block uppercase tracking-wide text-white-900 text-xs mb-2" for="message"> Nachricht</label>
            <textarea
              required
              name="message"
              class="no-resize block w-full bg-white-50 text-white-900 border border-colored-700 rounded py-3 px-4 mb-3 leading-tight focus:bg-colored-100 focus:border-colored-500 h-48 resize-none"
              id="message"></textarea>
          </div>
        </div>
        <div class="">
          <button
            type="submit"
            class="bg-colored-900 w-full text-white-50 bold px-8 py-3 rounded text-l active:bg-colored-800 transition-all flex justify-center items-center"
            >Nachricht versenden
          </button>
        </div>
      </form>
    </div>
  </section>
</Layout>
