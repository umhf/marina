---
import Layout from "../layouts/Layout.astro";
import { Icon } from "astro-icon";
import instagram from "../images/icons/instagram.svg";
---

<Layout>
  <section class="mt-16">
    <h1 class="text-center">Kontakt</h1>
    <p>
      Du hast Interesse an eine meiner Leistungen oder m√∂chtest mehr Erfahren? Schreibe mir einfach per Whatsapp,
      Instagram, Email oder Kontaktformular.
    </p>
    <div class="flex justify-center space-x-8 mt-8">
      <a href="https://wa.me/254777123456?text=Hello">
        <Icon class="w-12" name="logos:whatsapp" />
      </a>
      <img src={instagram} alt="Instagram Logo" class="w-12" />
      <Icon class="w-12" name="dashicons:email" />
    </div>
    <div class="text-center mt-8 text-xs md:hidden">oder</div>

    <form class="w-full mt-8" method="POST" data-netlify="true" name="Contact">
      <div class="flex flex-wrap">
        <div class="w-full">
          <label class="block uppercase tracking-wide text-white-900 text-xs font-bold mb-2" for="name"> Name</label>
          <input
            required
            class="block w-full bg-white-50 text-white-900 border border-colored-700 rounded py-3 px-4 mb-3 leading-tight focus:bg-colored-100 focus:border-colored-500"
            id="name"
            type="text"
            name="name"
          />
        </div>
      </div>
      <div class="flex flex-wrap">
        <div class="w-full">
          <label class="block uppercase tracking-wide text-white-900 text-xs font-bold mb-2" for="email"> Email</label>
          <input
            required
            class="block w-full bg-white-50 text-white-900 border border-colored-700 rounded py-3 px-4 mb-3 leading-tight focus:bg-colored-100 focus:border-colored-500"
            id="email"
            type="email"
            name="email"
          />
        </div>
      </div>
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full px-3">
          <label class="block uppercase tracking-wide text-white-900 text-xs font-bold mb-2" for="message">
            Nachricht
          </label>
          <textarea
            required
            name="message"
            class="no-resize block w-full bg-white-50 text-white-900 border border-colored-700 rounded py-3 px-4 mb-3 leading-tight focus:bg-colored-100 focus:border-colored-500 h-48 resize-none"
            id="message"></textarea>
        </div>
      </div>
      <div class="md:flex md:items-center">
        <div class="md:w-1/3">
          <button
            class="shadow bg-teal-400 hover:bg-teal-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded"
            type="submit"
          >
            Send
          </button>
        </div>
      </div>
    </form>
  </section>
</Layout>
