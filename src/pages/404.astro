---
import Layout from "../layouts/Layout.astro";
import { Picture } from "astro-imagetools/components";
import Heading from "../components/Heading.astro";
---

<!-- Ãœberall title und description mitgeben -->
<Layout title="404 Seite">
  <main id="404 Seite" class="mt-24 container mx-auto text-center">
    <Heading heading="Seite nicht gefunden" />
    <div class="max-w-sm mt-8 m-auto">
      <Picture
        src="/src/images/404.png"
        alt="404 image"
        breakpoints={{ count: 4, minWidth: 340, maxWidth: 1350 }}
        sizes="438px"
        format={["jpg", "webp"]}
      />
    </div>
  </main>
</Layout>
