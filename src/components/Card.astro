---
import BackgroundPicture from "./BackgroundImage.astro";
import ButtonPrimary from "./ButtonPrimary.astro";
const { headline, text, ctaText, link } = Astro.props;
---

<div class="text-colored-900 bg-colored-50 mt-4 md:mt-0 p-4 flex flex-col md:w-1/3">
  <h2 class="text-xl">{headline}</h2>
  <p class="mb-4">
    {text}
  </p>
  <div class="mt-auto">
    <ButtonPrimary text={ctaText} link={link} />
  </div>
</div>
